generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String?   @unique
  password  String?
  image     String?
  role      String    @default("user")
  idCard    String?
  mobile    String?
  birthDate DateTime? @default(now())
  provider  String    @default("credentials")
  Receipt   Receipt[]
  Event     Event[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Receipt {
  rec_id          Int       @id @default(autoincrement())
  rec_date        DateTime  @default(now())
  rec_quantity    Int
  rec_customer    User      @relation(fields: [rec_customer_id], references: [id], onDelete: Cascade)
  rec_customer_id String
  rec_seat        Seat_Type @relation(fields: [rec_seat_id], references: [seat_id], onDelete: Cascade)
  rec_seat_id     Int
  rec_status      Int       @default(0)
}

model Seat_Type {
  seat_id          Int            @id @default(autoincrement())
  seat_name        String
  seat_price       Float
  seat_create_date DateTime
  seat_due_date    DateTime
  event_seat       Event          @relation(fields: [event_seat_id], references: [event_id], onDelete: Cascade)
  event_seat_id    Int
  Receipt          Receipt[]
  Seat_Dispatch    Seat_Dispatch?
  Promotion        Promotion?
}

model Seat_Dispatch {
  st_id        Int       @id @default(autoincrement())
  seat_type    Seat_Type @relation(fields: [seat_type_id], references: [seat_id], onDelete: Cascade)
  seat_type_id Int       @unique
  sd_max       Int
  sd_current   Int       @default(0)
}

model Event {
  event_id             Int         @id @default(autoincrement())
  event_name           String
  event_intro          String
  event_description    String
  event_images         String
  event_start_date     DateTime
  event_last_date      DateTime
  event_location       String
  event_seat_per_order Int
  producer             User        @relation(fields: [producer_id], references: [id], onDelete: Cascade)
  producer_id          String
  event_type           Event_Type  @relation(fields: [event_type_id], references: [et_id], onDelete: Cascade)
  event_type_id        Int
  Seat_Type            Seat_Type[]
}

model Event_Type {
  et_id   Int     @id @default(autoincrement())
  et_name String
  Event   Event[]
}


model Promotion {
  pro_id          Int            @id @default(autoincrement())
  seat_type       Seat_Type      @relation(fields: [seat_type_id], references: [seat_id], onDelete: Cascade)
  seat_type_id    Int            @unique
  pro_description String
  pro_discount    Float
  pro_start_date  DateTime
  pro_last_date   DateTime
  pro_type        Promotion_Type @relation(fields: [pro_type_id], references: [pt_id], onDelete: Cascade)
  pro_type_id     Int
}

model Promotion_Type {
  pt_id     Int         @id @default(autoincrement())
  pt_name   String
  Promotion Promotion[]
}

model Admin_Data {
  ad_id         Int      @id @default(autoincrement())
  fee           Float
  banner_images String[]
}